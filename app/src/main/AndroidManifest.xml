<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noobsever.codingcontests">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Screens.ShowContestCardsActivity"
            android:parentActivityName=".Screens.LayoutOneActivity"/>
        <activity android:name=".Screens.RoomActivity" />
        <activity
            android:name=".Screens.SuggestUsActivity"
            android:parentActivityName=".Screens.BaseActivity" />
        <activity
            android:name=".Screens.HelpActivity"
            android:parentActivityName=".Screens.BaseActivity" />
        <activity
            android:name=".Screens.NotificationActivity"
            android:parentActivityName=".Screens.BaseActivity" />
        <activity android:name=".Screens.BaseActivity" />
        <activity
            android:name=".Screens.SettingsActivity"
            android:parentActivityName=".Screens.BaseActivity" />
        <activity android:name=".Screens.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Screens.LayoutTwoActivity" />
        <activity android:name=".Screens.LayoutOneActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>